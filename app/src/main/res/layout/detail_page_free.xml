<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="model"
            type="com.ottsolution.demo.data.networking.models.VodDetailResponse" />

        <variable
            name="viewModel"
            type="com.ottsolution.demo.ui.features.player.PlayerViewModel" />

        <import type="android.view.View" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/main_view_detail_free"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_16"
                android:layout_marginTop="@dimen/margin_24"
                android:layout_marginEnd="@dimen/margin_16">

                <TextView
                    android:id="@+id/vod_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:text="The Veer"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textAllCaps="true"
                    android:textSize="@dimen/text_size_28"
                    tools:text="Title" />

                <TextView
                    android:id="@+id/vod_subtitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/vod_title"
                    android:layout_marginTop="@dimen/margin_16"
                    android:layout_marginEnd="@dimen/margin_16"
                    android:ellipsize="end"
                    android:text="Sub title"
                    android:textAllCaps="true"
                    android:lines="2"
                    android:textColor="@color/white_40"
                    android:textSize="@dimen/text_size_16"
                    tools:text="2015 | Comedy, Drama | 121m" />
            </RelativeLayout>

            <include
                android:id="@+id/common_detail_view"
                layout="@layout/common_detail" />

            <FrameLayout
                android:id="@+id/container_recommended"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </ScrollView>
</layout>